<div>
    <h1>Products</h1>

    <div class="pagination" style="text-align: center; font-size: 20px; font-weight: bold;">
        {{#if pageInfo.hasPrevPage}}
            <a href="{{pageInfo.prevLink}}" style="margin-right: 15px;">Previous</a>
        {{/if}}

        <span>Page {{pageInfo.page}} of {{pageInfo.totalPages}}</span>

        {{#if pageInfo.hasNextPage}}
            <a href="{{pageInfo.nextLink}}" style="margin-left: 15px;">Next</a>
        {{/if}}
    </div>

    <ul>
    {{#each products}}
        <li>
            <strong>Title:</strong> {{this.title}}<br>
            <strong>ID:</strong> {{this._id}}<br>
            <strong>Description:</strong> {{this.description}}<br>
            <strong>Price:</strong> ${{this.price}}<br>
            <strong>Code:</strong> {{this.code}}<br>
            <strong>Stock:</strong> {{this.stock}}<br>
            <strong>Status:</strong> {{this.status}}<br>
            <strong>Category:</strong> {{this.category}}<br>
            <strong>Thumbnails:</strong>
            <ul>
                {{#each this.thumbnails}}
                    <li><img src="{{this}}" alt="{{../this.title}} thumbnail" style="width: 50px;"></li>
                {{/each}}
            </ul>
        </li>
        <br>
    {{/each}}
    </ul>

</div>
<script src="/socket.io/socket.io.js"></script>
<script src="/js/index.js"></script>
